{
  "manifest_version": 3,
  "name": "Bloco de Anotações",
  "description": "Uma extensão simples para fazer anotações enquanto navega.",
  "default_locale": "pt_BR",
  "version": "1.0",
  "icons": {
    "16": "imgs/icon16.png",
    "48": "imgs/icon48.png",
    "128": "imgs/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "imgs/icon16.png",
      "48": "imgs/icon48.png",
      "128": "imgs/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
